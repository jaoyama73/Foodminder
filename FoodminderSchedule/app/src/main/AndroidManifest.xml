<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodminderschedule">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">


        </activity>


        <!--Activity for inputting item and its expiration date to Calendar-->
        <activity
            android:name="com.example.foodminderschedule.InputActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Activity for Calendar-->
        <activity
            android:name="com.example.foodminderschedule.CalendarForm">

        </activity>

        <!--Activity for Pop-up window after a date is clicked-->
        <activity
            android:name=".PopUp"
            android:theme="@style/AppTheme.PopUpTheme">

        </activity>
    </application>

</manifest>